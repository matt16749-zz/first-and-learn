<h1>Comments</h1>
<% @comments.each do |comment| %>
  <%= link_to comment.body, polymorphic_path([@commentable, comment]) %>
<% end %>

<h2>New Comment</h2>

<%= form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Submit" %></p>
  <% end %>
