<% if @paths.nil? %>
  <h1>There are currently no paths to display!</h1>
<% else %>
  <% @paths.each do |path| %>
    <div class="path">
      <ul>
        <li><%= link_to path.title, path_path(path) %>
        <% if current_user && current_user.id == path.user_id %>
          <%= link_to "Edit Path", edit_path_path(path) %></li>
        <% end %>
        <li><%= path.description %></li>
      </ul>
    </div>
  <% end %>
<% end %>

<%= link_to "Create New Path", new_path_path %>
