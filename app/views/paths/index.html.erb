<% if @paths.nil? %>
  <h1>There are currently no paths to display!</h1>
<% else %>
  <% @paths.each do |path| %>
    <div class="path">
      <ul>
        <li><%= link_to path.title, path_path(path) %><%= link_to "Edit Path", edit_path_path(path) %></li>
        <li><%= path.description %></li>
      </ul>
    </div>
  <% end %>
<% end %>
  <% if @path.nil? %>
  <%= link_to "Create New Path", new_path_path if current_user %>
   <% else%>
    <%= render "form", :locals => {path: @path} %>
  <% end %>

