<div class="login">
  <h2 class="path-header">Edit Step</h2>
  <%= form_for [@path, @step] do |f| %>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class =>"description-field" %><br />
    <%= label_tag 'Select Link' %><br />
    <%= select("asset", "asset_id", @assets.collect {|a| [ a.title, a.id ] }, selected: @step.asset_id)%>
    <%= f.submit :class=>"styled-button" %>
  <% end %>
</div>
